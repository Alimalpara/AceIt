<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/background_color_forlist_q_f_C"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <EditText
        android:id="@+id/etBottomsheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/background_for_edittext"
        android:ems="10"

        android:hint="Add item"
        android:inputType="textNoSuggestions|textImeMultiLine"

        android:minHeight="50dp"
        android:paddingStart="8dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"

        app:layout_constraintBottom_toTopOf="@+id/btnBottomSheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBottomSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="Save"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etBottomsheet"
        app:layout_constraintStart_toStartOf="@+id/etBottomsheet"
        app:layout_constraintTop_toBottomOf="@+id/etBottomsheet" />
</androidx.constraintlayout.widget.ConstraintLayout>