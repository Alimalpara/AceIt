<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Interview Help"
        android:textColor="@color/section_heading_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/btncvCreate"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnResumeUpdate"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Request resume check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnScheduleInterviewHome"
        app:layout_constraintStart_toStartOf="@+id/btnScheduleInterviewHome"
        app:layout_constraintTop_toBottomOf="@+id/btnScheduleInterviewHome" />

    <Button
        android:id="@+id/btnScheduleInterviewHome"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Schedule an interview"
        app:layout_constraintEnd_toEndOf="@+id/btncvCreate"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Letter Creation"
        android:textColor="@color/section_heading_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/btntoHelp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnReferenceCreate"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reference Letter Creator"
        app:layout_constraintEnd_toEndOf="@+id/btntoHelp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="351dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_for_line"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/btncvCreate"></LinearLayout>

    <Button
        android:id="@+id/btncvCreate"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cover Letter Creator"
        app:layout_constraintEnd_toEndOf="@+id/btnReferenceCreate"
        app:layout_constraintStart_toStartOf="@+id/btnReferenceCreate"
        app:layout_constraintTop_toBottomOf="@+id/btnReferenceCreate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="72dp"
        android:text="Utilities"
        android:textColor="@color/section_heading_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFavoutie"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Favourites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btntoHelp"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Checklist"
        app:layout_constraintEnd_toEndOf="@+id/btnFavoutie"
        app:layout_constraintStart_toStartOf="@+id/btnFavoutie"
        app:layout_constraintTop_toBottomOf="@+id/btnFavoutie" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="351dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_for_line"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/btntoHelp"
        app:layout_constraintStart_toStartOf="@+id/btntoHelp"
        app:layout_constraintTop_toBottomOf="@+id/btntoHelp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>