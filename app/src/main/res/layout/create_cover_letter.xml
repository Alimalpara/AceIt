<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svCreateCoverLetter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <EditText
            android:id="@+id/etCreateCoverLetterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_for_edittext"

            android:hint="Enter your name"
            android:minHeight="50dp"
            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etCreateCoverLetterPosition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_for_edittext"

            android:hint="Enter the position"
            android:minHeight="50dp"
            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCreateCoverLetterName" />

        <EditText
            android:id="@+id/etCreateCoverLetterCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"

            android:background="@drawable/background_for_edittext"
            android:hint="Enter the company name"
            android:minHeight="50dp"
            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCreateCoverLetterPosition" />

        <EditText
            android:id="@+id/etCreateCoverLetterSkills"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="16dp"
            android:background="@drawable/background_for_edittext"
            android:hint="Enter your skills"
            android:minHeight="50dp"
            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCreateCoverLetterCompany" />

        <EditText
            android:id="@+id/etCreateCoverLetterExperience"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="16dp"
            android:background="@drawable/background_for_edittext"
            android:hint="Enter your experience"
            android:minHeight="50dp"
            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etCreateCoverLetterSkills" />

        <EditText
            android:id="@+id/etCreateCoverLetterHiringManagerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="42dp"
            android:background="@drawable/background_for_edittext"
            android:hint="Enter Hiring Manager Name"
            android:minHeight="50dp"

            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btnCreateCOverLetterMain"
            app:layout_constraintEnd_toEndOf="@+id/etCreateCoverLetterExperience"
            app:layout_constraintStart_toStartOf="@+id/etCreateCoverLetterExperience"
            app:layout_constraintTop_toBottomOf="@+id/etCreateCoverLetterExperience" />

        <Button
            android:id="@+id/btnCreateCOverLetterMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="26dp"
            android:text="Create Cover Letter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/etCreateCoverLetterExperience"
            app:layout_constraintStart_toStartOf="@+id/etCreateCoverLetterExperience"
            app:layout_constraintTop_toBottomOf="@+id/etCreateCoverLetterHiringManagerName" />

        <!-- Add more EditText fields for other variables as needed -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
