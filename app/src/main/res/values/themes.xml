<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AceIt" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_1</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Set activity background color -->
        <item name="android:windowBackground">@color/primary_color</item>

<!--        button style default-->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>

<!--        text view default-->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>

<!--        Edit text style default-->
        <item name="android:editTextStyle">@style/EditTextCustom</item>


<!--animatonsg-->

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

<!--        potrati only-->


    </style>

    <style name="checkBoxStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--
        to add checked color
-->
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="android:textColorSecondary">#F6EBEB</item><!--uncheked box color -->
    </style>

<!--    for buttons-->
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/button_background_all</item>
        <item name="android:textColor">@color/custom_button_text_color</item>
        <item name="strokeColor">@color/stroke_color_for_button</item>
        <item name="strokeWidth">1dp</item>

        <!-- Other custom attributes for the button style -->
    </style>
<!--    For text view-->
    <style name="CustomTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/main_Text_color</item>
        <item name="android:textColorHint">@color/secondary_light</item>
        <item name="android:textColorLink">@color/secondary_dark</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>

<!--    for edit text-->
    <style name="EditTextCustom" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_custom_background</item>
        <!-- Other attributes for the EditText style if needed -->
        <item name="android:textColor">#000000</item> <!-- Change this to the text color you want -->
        <item name="android:textColorHint">#808080</item> <!-- Change this to the hint color you want -->
        <!-- Other attributes for the EditText style if needed -->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_main</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left_main</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_main</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right_main</item>

<!--        for smoother-->
      <!--  <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_main</item>

        <item name="android:activityCloseExitAnimation">@anim/slide_out_right_main</item>-->
    </style>


</resources>