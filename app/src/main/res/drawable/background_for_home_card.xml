<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_brown" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Background -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
